<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/leak_singleton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:onClick="gotoActivity"
                android:text="SingletonLeak" />

            <Button
                android:id="@+id/leak_static_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:onClick="gotoActivity"
                android:text="StaticInnerLeak" />

            <Button
                android:id="@+id/leak_handler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:onClick="gotoActivity"
                android:text="HandlerLeak" />

            <Button
                android:id="@+id/leak_handler_thread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:onClick="gotoActivity"
                android:text="HandlerThreadLeak" />


            <Button
                android:id="@+id/leak_thread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:onClick="gotoActivity"
                android:text="ThreadLeak" />

            <Button
                android:id="@+id/leak_asynctask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:onClick="gotoActivity"
                android:text="AsyncTaskLeak" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
